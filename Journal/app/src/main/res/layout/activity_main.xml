<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tigran.journal.MainActivity">

    <EditText
        android:id="@+id/name_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/name"
        android:paddingTop="16dp" />

    <LinearLayout style="@style/linear_lay_horizontal">

        <TextView
            android:id="@+id/chemistry_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chemistry"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/chemistry_grade"
            style="@style/edit_text_style" />

    </LinearLayout>

    <LinearLayout style="@style/linear_lay_horizontal">

        <TextView
            android:id="@+id/math_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/math"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/math_grade"
            style="@style/edit_text_style" />

    </LinearLayout>

    <LinearLayout style="@style/linear_lay_horizontal">

        <TextView
            android:id="@+id/history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/history_grade"
            style="@style/edit_text_style" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="8dp"
        android:onClick="displayGrades"
        android:text="@string/show_grade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="16dp"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
