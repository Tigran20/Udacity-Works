<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_name"
        style="@style/main_screen_name"
        android:layout_marginTop="@dimen/marginTopLarge"
        android:paddingBottom="@dimen/paddingBottomLarge"
        android:text="@string/world_capitals_quiz" />

    <TextView
        style="@style/main_screen_subtitle"
        android:text="@string/enter_your_name" />

    <EditText
        android:id="@+id/ed_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/marginBottom"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textCapWords"
        android:paddingBottom="@dimen/paddingBottom"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColor="@color/accent"
        tools:ignore="LabelFor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/start_button_background"
        android:onClick="startQuizGame"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:text="@string/start_btn"
        android:textColor="@color/accent"
        android:textSize="@dimen/textSizeVerySmall" />
</LinearLayout>